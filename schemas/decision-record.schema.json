{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Decision Record",
    "type": "object",
    "required": [
        "phase",
        "decision",
        "rationale",
        "human_signature",
        "date"
    ],
    "properties": {
        "phase": {
            "type": "string",
            "const": "decision"
        },
        "decision": {
            "type": "string",
            "enum": [
                "REFACTOR",
                "REBUILD",
                "ABORT"
            ]
        },
        "rationale": {
            "type": "string"
        },
        "human_signature": {
            "type": "string",
            "description": "The explicit string typed by the user to approve."
        },
        "date": {
            "type": "string",
            "format": "date"
        }
    }
}