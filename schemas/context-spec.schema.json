    "read_only",
    "read_write",
    "forbidden"
  ],
  "properties": {
    "ticket_id": {
      "type": "string"
    },
    "read_only": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "read_write": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "forbidden": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}